<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrinkMaster.Pages.PlayerInputPage"
             Title="PlayerInputPage">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Players}" 
                  VerticalOptions="Center"
                  HorizontalOptions="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Name}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <HorizontalStackLayout HorizontalOptions="Center" 
                               VerticalOptions="End">
            <Entry x:Name="NameEntry"
                   WidthRequest="250"
                   Placeholder="Enter text" />
            <Button x:Name="AddBtn"  WidthRequest="50"
                    FontAttributes="Bold"
                    Text="+"
                    Clicked="AddButtonClicked"/>

            <Button 
                x:Name="CategoriesBtn"
                Text="Volgende"
                Clicked="goToCategories"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
